{
  "env": {
    "browser": true,
    "es6": true,
    "node": false
  },
  "extends": [
    "eslint:recommended",
    "plugin:promise/recommended",
    "plugin:unicorn/recommended"
  ],
  "overrides": [
    {
      "files": [
        "repo-checker.config.js"
      ],
      "env": {
        "node": true
      },
      "rules": {
        "unicorn/prefer-module": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "html",
    "promise",
    "unicorn"
  ]
}
